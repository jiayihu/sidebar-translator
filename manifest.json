{
  "manifest_version": 3,
  "name": "Sidebar Translator",
  "version": "0.1.0",
  "description": "Translate page content in a sidebar without modifying the live DOM",
  "permissions": ["sidePanel", "activeTab", "storage"],
  "host_permissions": [
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*",
    "https://translation.googleapis.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "options_page": "src/options/index.html",
  "action": {
    "default_title": "Open Sidebar Translator"
  }
}
